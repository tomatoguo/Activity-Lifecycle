<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <Button
        android:id="@+id/start_another_activity_explicitly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_start_another_activity_explicitly"/>

    <Button
        android:id="@+id/start_another_activity_implicitly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_start_another_activity_implicitly"/>

</LinearLayout>
